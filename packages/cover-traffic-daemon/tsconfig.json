{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/unreleasedTokens.json"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    // by default we don't want links to source code to change on every change
    // when building docs for releases we can fix the revision on the cmdline
    "gitRevision": "master"
  },
  "references": [{ "path": "../utils" }, { "path": "../core" }]
}
