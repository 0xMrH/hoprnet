  "dependencies": {
    "@hoprnet/hopr-core": "1.75.0-next.16",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.10.0"
  },
  "devDependencies": {},
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": "ts-node/register"
  }
