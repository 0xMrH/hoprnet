{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./build/lib",
    "noImplicitAny": false,
    "allowJs": true,
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "target": "es2019",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "typeRoots": ["types"]
  },
  "include": ["scripts/**/*.ts", "types"],
  "exclude": ["test/openzeppelin-contracts", "build"]
}
