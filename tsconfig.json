{
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "es2019",
    "strict": true
  },
  "include": ["src/**/*"],
  "typeRoots": [
    "node_modules/hopr-types/types",
    "node_modules/@types"
  ]
}
