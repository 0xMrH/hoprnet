{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2019",
    "strict": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["scripts/**/*", "src/**/*"],
  "exclude": ["node_modules/*"]
}
