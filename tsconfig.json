{
  "compilerOptions": {
    "resolveJsonModule": true,
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "strict": true,
    "outDir": "lib"
  },
  "exclude": ["lib", "node_modules"],
  "include": ["src/**/*.ts"]
}
