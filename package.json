        "eslint": "^5.9.0",
        "futoin-hkdf": "^1.0.2",
        "ganache-core": "^2.3.1",
        "libp2p": "^0.24.2",
        "libp2p-crypto": "^0.14.1",
        "libp2p-crypto-secp256k1": "^0.2.2",
        "libp2p-kad-dht": "^0.13.0",
        "libp2p-mplex": "^0.8.3",
        "libp2p-secio": "^0.10.1",
        "libp2p-tcp": "^0.13.0",
        "libp2p-webrtc-star": "^0.15.6",
