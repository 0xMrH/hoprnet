{
  "name": "@hoprnet/hopr-core-ethereum",
  "version": "0.0.1",
  "repository": "git@github.com:hoprnet/hopr-core-ethereum.git",
  "license": "LGPL-3.0-only",
  "main": "lib/index.js",
  "scripts": {
    "postinstall": "yarn build",
    "test": "npx mocha",
    "dev": "ttsc -w",
    "build:types": "typechain --target web3-v1 --outDir './src/tsc/web3' './node_modules/@hoprnet/hopr-ethereum/build/extracted/abis/*.json'",
    "build": "yarn build:types && ttsc -d -p ."
  },
  "files": [
    "!**/*.spec.ts",
    "lib/",
    "hopr.png"
  ],
  "engines": {
    "yarn": "^1.19.2",
    "node": "^12"
  },
  "dependencies": {
    "@hoprnet/hopr-core-connector-interface": "hoprnet/hopr-core-connector-interface",
    "@hoprnet/hopr-ethereum": "hoprnet/hopr-ethereum#develop",
    "@hoprnet/hopr-types": "hoprnet/hopr-types",
    "bn.js": "^5.1.1",
    "keccak256": "^1.0.0",
    "levelup": "^4.3.2",
    "peer-id": "^0.13.9",
    "secp256k1": "^4.0.0",
    "web3": "^1.2.6"
  },
  "devDependencies": {
    "@types/levelup": "^4.3.0",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.12.8",
    "memdown": "^5.1.0",
    "mocha": "^7.0.1",
    "ts-node": "^8.6.2",
    "ttypescript": "^1.5.10",
    "typechain": "^1.0.5",
    "typechain-target-web3-v1": "^1.0.4",
    "typescript": "^3.8.2",
    "typescript-transform-paths": "^1.1.14"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": [
      "./scripts/tmocha.js"
    ]
  }
}
