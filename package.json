{
  "name": "@hoprnet/hopr-core",
  "author": {
    "name": "Validity Labs AG",
    "email": "info@validitylabs.org",
    "url": "https://validitylabs.org"
  },
  "version": "0.3.0",
  "description": "Privacy-preserving messaging protocol with incentivations for relay operators",
  "license": "GPL-3.0-only",
  "keywords": [
    "privacy",
    "web3",
    "messaging"
  ],
  "engines": {
    "node": "^12",
    "yarn": "^1.22"
  },
  "homepage": "https://hopr.network",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoprnet/hopr-core.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "rm -rf ./lib && tsc -d -p . && git add ./lib"
    }
  },
  "scripts": {
    "demo": "node test/demo.js",
    "multiprocess": "node test/multiprocess.js",
    "hopr": "ts-node -T chat/index.ts",
    "deployContract": "node test/deployContract",
    "startTestnet": "node test/startBlockchain",
    "createForTest": "node test/createFor",
    "createFor": "node test/stakeFor",
    "fundAccounts": "node ./node_modules/@hoprnet/hopr-core-ethereum/lib/scripts/fundAccounts.js"
  },
  "dependencies": {
    "@hoprnet/hopr-utils": "https://github.com/hoprnet/hopr-utils.git",
    "@nodeutils/defaults-deep": "~1.1.0",
    "abort-controller": "^3.0.0",
    "bs58": "^4.0.1",
    "chalk": "~4.0.0",
    "clear": "^0.1.0",
    "debug": "^4.1.1",
    "dotenv": "~8.2.0",
    "dotenv-expand": "^5.1.0",
    "figlet": "^1.2.4",
    "futoin-hkdf": "~1.3.2",
    "getopts": "~2.2.4",
    "ip-address": "^6.1.0",
    "it-pipe": "^1.1.0",
    "leveldown": "~5.6.0",
    "levelup": "~4.3.0",
    "libp2p": "~0.27.4",
    "libp2p-crypto": "~0.17.6",
    "libp2p-kad-dht": "~0.18.6",
    "libp2p-mplex": "~0.9.5",
    "libp2p-secio": "^0.12.4",
    "libp2p-tcp": "~0.14.4",
    "libp2p-websockets": "~0.13.6",
    "multiaddr": "^7.4.3",
    "multihashes": "~0.4.15",
    "peer-id": "~0.13.11",
    "peer-info": "~0.17.5",
    "read": "~1.0.7",
    "rlp": "~2.2.4",
    "secp256k1": "~4.0.0",
    "simple-peer": "~9.6.2",
    "webrtc-stun": "^3.0.0",
    "wrtc": "~0.4.4",
    "ts-node": "^8.6.2",
    "xor-distance": "~2.0.0"
  },
  "devDependencies": {
    "@hoprnet/hopr-core-connector-interface": "https://github.com/hoprnet/hopr-core-connector-interface.git",
    "@hoprnet/hopr-core-ethereum": "https://github.com/hoprnet/hopr-core-ethereum.git#develop",
    "@hoprnet/hopr-core-polkadot": "https://github.com/hoprnet/hopr-core-polkadot.git",
    "@hoprnet/hopr-demo-seeds": "https://github.com/hoprnet/hopr-demo-seeds.git",
    "@hoprnet/hopr-types": "https://github.com/hoprnet/hopr-types.git",
    "@types/bn.js": "^4.11.6",
    "@types/bs58": "^4.0.1",
    "@types/clear": "^0.1.0",
    "@types/debug": "^4.1.5",
    "@types/figlet": "^1.2.0",
    "@types/leveldown": "^4.0.2",
    "@types/levelup": "^4.3.0",
    "@types/lodash.groupby": "^4.6.6",
    "@types/memdown": "^3.0.0",
    "@types/mocha": "^7.0.1",
    "@types/node": "~12",
    "@types/read": "^0.0.28",
    "@types/secp256k1": "~3.5.2",
    "axios": "^0.19.1",
    "husky": "^4.2.3",
    "memdown": "^5.1.0",
    "mocha": "^7.0.0",
    "typescript": "^3.8.2"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "prettier": {
    "parser": "typescript",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "consistent",
    "arrowParens": "avoid"
  }
}
