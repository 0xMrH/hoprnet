{
  "name": "@hoprnet/hopr-core-ethereum",
  "version": "0.0.1",
  "repository": "git@github.com:hoprnet/hopr-core-ethereum.git",
  "license": "LGPL-3.0-only",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf ./lib",
    "test": "mocha",
    "dev": "yarn clean && yarn build:types && tsc -w",
    "build:types": "typechain --target web3-v1 --outDir './src/tsc/web3' './node_modules/@hoprnet/hopr-ethereum/build/extracted/abis/*.json'",
    "build": "yarn clean && yarn build:types && tsc && cp -R ./src/tsc/web3 ./lib/tsc/web3"
  },
  "files": [
    "!**/*.spec.ts",
    "src/",
    "lib/",
    "hopr.png"
  ],
  "engines": {
    "yarn": "^1.22",
    "node": "^12"
  },
  "dependencies": {
    "@hoprnet/hopr-core-connector-interface": "https://github.com/hoprnet/hopr-core-connector-interface.git",
    "@hoprnet/hopr-demo-seeds": "https://github.com/hoprnet/hopr-demo-seeds.git",
    "@hoprnet/hopr-ethereum": "https://github.com/hoprnet/hopr-ethereum.git#develop",
    "@hoprnet/hopr-utils": "https://github.com/hoprnet/hopr-utils.git",
    "bn.js": "^5.1.1",
    "chalk": "^4.0.0",
    "debug": "^4.1.1",
    "it-pipe": "^1.1.0",
    "keccak256": "^1.0.0",
    "levelup": "^4.3.2",
    "peer-id": "^0.13.9",
    "secp256k1": "^4.0.0",
    "web3": "^1.2.6",
    "web3-core": "^1.2.6",
    "web3-eth-contract": "^1.2.6"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/levelup": "^4.3.0",
    "@types/memdown": "^3.0.0",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.12.8",
    "@types/secp256k1": "^4.0.0",
    "husky": "^4.2.3",
    "memdown": "^5.1.0",
    "mocha": "^7.0.1",
    "ts-generator": "^0.0.8",
    "ts-node": "^8.6.2",
    "typechain": "^1.0.5",
    "typechain-target-web3-v1": "^1.0.4",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add ./lib"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": "ts-node/register"
  }
}
