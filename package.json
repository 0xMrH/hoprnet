{
  "name": "@hoprnet/hopr-demo-seeds",
  "version": "1.0.0",
  "description": "Demo seeds for HOPR testing",
  "license": "GPL-3.0-only",
  "keywords": [
    "privacy",
    "web3",
    "messaging"
  ],
  "engines": {
    "node": "^12",
    "yarn": "^1.22"
  },
  "husky": {
    "hooks": {
      "pre-commit": "rm -rf ./lib && tsc -d -p . && git add ./lib"
    }
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://hoprnet.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoprnet/hopr-demo-seeds.git"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "typescript": "^3.8.2"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "prettier": {
    "printWidth": 160,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "consistent",
    "arrowParens": "avoid"
  }
}
