{
  "name": "@hoprnet/hopr-utils",
  "version": "0.1.0",
  "repository": "git@github.com:hoprnet/hopr-utils.git",
  "license": "LGPL-3.0-only",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf ./lib",
    "test": "mocha",
    "dev": "yarn clean && tsc -w",
    "build": "yarn clean && tsc -p . --noEmit false"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "lib/",
    "!lib/*.spec**",
    "README.md",
    "package.json",
    "yarn.lock"
  ],
  "engines": {
    "yarn": "^1.22",
    "node": "^12"
  },
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "chalk": "^4.0.0",
    "strip-ansi": "^6.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.8",
    "@types/ramda": "^0.27.4",
    "chai": "^4.2.0",
    "husky": "^4.2.3",
    "lint-staged": ">=10",
    "mocha": "^7.0.1",
    "prettier": "^2.0.5",
    "ramda": "^0.27.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.2"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": "prettier --write"
  }
}
